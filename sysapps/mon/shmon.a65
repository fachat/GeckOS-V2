          LDX #4:BGNF1 LDA NR:CMP ANDT,X:BNE BGNF2
          LDA STBYT:CMP ANDA,X:BNE BGNF2
          LDA ANDC,X:BNE ASS1
BGNF2     DEX:BPL BGNF1

          ldx STBYT:lda STBX,x:beq bgnf
          sta STBYT
          inc LEN
          lda #0:sta Z3+1
          lda NR:jmp BGD9
bgnf
          JMP ERR

