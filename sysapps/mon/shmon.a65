          lda #<TEXT
          sta ZEI
          lda #>TEXT
          sta ZEI+1
BGD3      LDX LZEI:ldy #0
BGD4      LDA IOBUF,x:sec:sbc (ZEI),y:beq bgd5
          cmp #$20:bne BGD5
bgd5      INX:INY
          CPY #3
          BCC BGD4:BCS BGD6
